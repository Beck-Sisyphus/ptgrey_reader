<launch>

     <node name="multi_reader" pkg="ptgrey_reader" type="multi_reader" output="screen">

        <param name="is_pub" type="bool" value="true"/>
        <param name="is_show" type="bool" value="false"/>
        <param name="is_print" type="bool" value="true"/>
        <rosparam>
            # common setting and default individual settings
            cam_cnt: 2
            frameRate:  30
            gain: 1.0
            is_auto_shutter: false
            is_sync: false
            shutter: 5.0
            brightness: 0.1
            exposure: 0.4
            gain: 1.0

            # individual setting for camera 0
            camera0:
                serialNum: 17221121
                topic: image_raw
            camera1:
                serialNum: 17221110
                topic: image_raw1
        </rosparam>
    </node>



</launch>
